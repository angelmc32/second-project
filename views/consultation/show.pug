extends ../layout

block content

  main

    .height-container-column
      img(src=`${consultation.image_url}`, alt="")
      p #{consultation.chief_complaint}
      if user.license !== undefined
        form(action="/comment/new" method="post" class="uk-form-stacked")
          .uk-margin
            .uk-form-controls
              input#form-stacked-text.uk-input.uk-form-width-large(type='text', placeholder='Que le recomiendas al paciente...')
          .uk-margin
            button.uk-button.uk-button-primary.uk-border-pill.uk-align-center(type="submit") Agregar comentario